        <script type="text/javascript">
            function EditarSede(codigo) {
                $("#seccionfoto").css("display", "block");
                $("#seccionarchivo").css("display", "block");
                var codigo = codigo;
                $('#modalSede').modal('show');
                $('#codigo').val(codigo);
                $('#accion').val('editar');
                return $.ajax({
                    type: "get",
                    url: '{{ base_url() }}/admin/editar/sedes',
                    data: {
                        codigo: codigo
                    },
                    success: function (data) {
                        $.each(data, function (i, item) {
                            $('#id').val(item.id_sede),
                            $('#distrito').val(item.distrito),
                            $('#nombre').val(item.nombre),
                            $('#direccion').val(item.direccion),
                            $('#fotooriginal').attr('src', '{{base_url()}}/' + item.foto);
                        });
                    },
                    error: function () {
                    }
                });

            }


            $(document).ready(function () {

                ListaSedes();

                $(".cogepx").on("click", function () {
                    var valor = $(this).data('codigo');
                    $('.foto').val(valor);
                });

                // Translated
                $('.dropify-es').dropify({
                    messages: {
                        default: 'Arrastra y suelta un archivo aquí o haz clic',
                        replace: 'Arrastre y suelte un archivo o haga clic para reemplazar',
                        remove: 'Suprimir',
                        error: 'Lo sentimos, el archivo es demasiado grande'
                    }
                });

                // Used events
                var drEvent = $('#input-file-events').dropify();

                drEvent.on('dropify.beforeClear', function (event, element) {
                    return confirm("Do you really want to delete \"" + element.file.name + "\" ?");
                });

                drEvent.on('dropify.afterClear', function (event, element) {
                    alert('File deleted');
                });

                drEvent.on('dropify.errors', function (event, element) {
                    console.log('Has Errors');
                });

                var drDestroy = $('#input-file-to-destroy').dropify();
                drDestroy = drDestroy.data('dropify')
                $('#toggleDropify').on('click', function (e) {
                    e.preventDefault();
                    if (drDestroy.isDropified()) {
                        drDestroy.destroy();
                    } else {
                        drDestroy.init();
                    }
                })

            })


            var childRows = null;

            function ListaSedes() {
                responsive: true
                $.fn.dataTable.moment('M/D/YYYY h:m:s A');
                var dt = $('#sedes').DataTable({
                    destroy: true,
                    "order": [],
                    "language": {
                        "lengthMenu": "Ver _MENU_ registros por página",
                        "zeroRecords": "No se encontraron resultados",
                        "info": "Viendo página _PAGE_ de _PAGES_",
                        "infoEmpty": "No se encontraron registros",
                        "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                        "search": "Buscar:",
                        "paginate": {
                            "first": "Primero",
                            "last": "Último",
                            "next": "Siguiente",
                            "previous": "Anterior"
                        },
                    },

                    "ajax": {
                        "type": "get",
                        "url": "{{ base_url() }}/admin/listar/sedes",
                    },

                    "columns": [
                        {"data": "nom_distrito"},
                        {"data": "nombre"},
                        {"data": "direccion"},
                        {
                            "data": "estado",
                            render: function (data) {
                                if (data == "1") {
                                    return "<span class='label label-success'>Activado</span>";
                                } else if (data == "2") {
                                    return "<span class='label label-warning'>Desactivado</span>";
                                } else if (data == "3") {
                                    return "<span class='label label-danger'>Eliminado</span>";
                                } 
                            },
                        },
                        {
                            data: "created_at",
                            render: function (d) {
                                return moment(d).format("YYYY-MM-DD");
                            }
                        },
                        {
                            data: "updated_at",
                            render: function (d) {
                                return moment(d).format("YYYY-MM-DD");
                            }
                        },
                        {
                            "data": "id_sede",
                            render: function (data) {
                                return "<a class='btn btn-success'" +
                                        "style='cursor:pointer;overflow: visible;'" +
                                        "href='disciplinas/" + data + "'" +
                                        "data-toggle='modal'" +
                                        "data-content=''>" +
                                        "Disciplinas</a>"
                            },
                        },
                        {
                            "data": "id_sede",
                            render: function (data) {
                                return "<a class='btn btn-default'" +
                                        "style='cursor:pointer;overflow: visible;'" +
                                        "onclick='EditarSede(" + data + ")'" +
                                        "data-toggle='modal'" +
                                        "data-content=''>" +
                                        "Editar</a>"
                            },
                        },
                    ],

                    columnDefs: [
                        {
                            className: 'text-center',
                            targets: [6],
                        },

                        {   
                            width: "15%",
                            targets: [0, 3]
                        },
    
                    ]
                });

            }

            //Nueva noticia
            function nuevasede() {
                var tipo = 1;
                $('#modalSede').modal('show');
                $("#FormActualizarSede")[0].reset();
                $("#seccionfoto").css("display", "none");
                $('#accion').val('nuevo');
            }

            function grabarsede() {
                var formData = new FormData($("#FormActualizarSede")[0]);
                var resultado = "";
                $.ajax({
                    url: "{{ base_url() }}/admin/registrar/sedes",
                    async: false,
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    enctype: 'multipart/form-data',
                    processData: false,
                    dataType: 'json',
                    success: function (datos) {
                        resultado = datos.response;
                        mensaje = datos.message;
                    }
                });
                return [resultado, mensaje];
            }


            $(".guardarsede").on("click", function (event) {

                event.preventDefault();

                var accion = $('#accion').val();
                var nombre = $('#nombre').val();
                var direccion = $('#direccion').val();
                var distrito = $('#distrito').val();
                var estado = $('#estado').val();
                var foto = $('#foto').val();

                if (nombre == "") {
                    Swal.fire({
                        icon: 'warning',
                        title: '¡Advertencia!',
                        text: 'Debe imgresar un año de publicación.',
                    })
                } else {
                    if (direccion == "") {
                        Swal.fire({
                            icon: 'warning',
                            title: '¡Advertencia!',
                            text: 'Debe ingresar la dirección.',
                        })
                    } else {
                        if (direccion == "") {
                            Swal.fire({
                                icon: 'warning',
                                title: '¡Advertencia!',
                                text: 'Debe ingresar el número de edición.',
                            })
                        } else {
                            if (distrito == "") {
                                Swal.fire({
                                    icon: 'warning',
                                    title: '¡Advertencia!',
                                    text: 'Debe ingresar el título de la edición.',
                                })
                            } else {
                                if (estado == "") {
                                    Swal.fire({
                                        icon: 'warning',
                                        title: '¡Advertencia!',
                                        text: 'Debe ingresar una descripción.',
                                    })
                                    } else {
                                        if (foto == "" && accion == "nuevo") {
                                            Swal.fire({
                                                icon: 'warning',
                                                title: '¡Advertencia!',
                                                text: 'Debe seleccionar una foto.',
                                            })
                                        } else {
                                            Swal.fire({
                                                title: 'Está seguro?',
                                                icon: 'warning',
                                                showCancelButton: true,
                                                confirmButtonColor: '#3085d6',
                                                cancelButtonColor: '#d33',
                                                confirmButtonText: 'Sí, guardar!'
                                            }).then((result) => {
                                                if (result.value) {
                                                    var resp = grabarsede();
                                                    if (resp[0] == "success") {
                                                        Swal.fire({
                                                            icon: 'success',
                                                            title: '¡Éxito!',
                                                            text: resp[1],
                                                        }).then((result) => {
                                                            if (result.value) {
                                                                $('#modalSede').modal('hide');
                                                                var drEvent = $('#foto').dropify();
                                                                drEvent = drEvent.data('dropify');
                                                                drEvent.resetPreview();
                                                                drEvent.clearElement();
                                                                ListaSedes();
                                                            }
                                                        });
                                                    } else {
                                                        Swal.fire({
                                                            icon: 'error',
                                                            title: '¡Error!',
                                                            text: resp[1],
                                                        })
                                                    }
                                                }
                                            })
                                        }
                                    }
                                }
                            }
                        }
                    }
                });

        </script>

    {% endblock content %}